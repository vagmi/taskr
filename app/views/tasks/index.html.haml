- if @bucket
  .bucket
    %h3= @bucket.name
    %p= @bucket.description
%ul#tasks
  - @tasks.each do |t|
    - unless t.new_record?
      %li
        - if t.done
          [done]
        =t.title
        - unless t.done
          =link_to 'complete', complete_task_path(t), :confirm=>'Are you sure?', :method=>'post'
- if @bucket
  = semantic_form_for [@bucket,@task] do |f|
    %fieldset
      %ol
        =f.input :title, :label=>"New Task"
        =f.input :bucket_id, :as=>:hidden
    =f.buttons
